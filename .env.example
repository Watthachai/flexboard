# Flexboard Docker Compose Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration (REQUIRED)
DATABASE_URL="sqlserver://your-server:1433;database=YourDatabase;user=YourUser;password=YourStrongPassword;trustServerCertificate=true"

# Control Plane Configuration (Phase 2)
CONTROL_PLANE_URL="https://your-control-plane.railway.app"
FLEXBOARD_API_KEY="fxb_your_api_key_from_saas_provider"

# Server Configuration
NODE_ENV="production"
AGENT_PORT="3001"
VIEWER_PORT="3000"

# Agent Configuration
AGENT_VERSION="1.0.0"
SYNC_INTERVAL="300000"  # 5 minutes

# Optional: Custom domains/ports
# CUSTOM_DOMAIN="dashboard.yourcompany.com"
# ENABLE_HTTPS="true"
